<resources>

    <!-- Base application theme. -->
    <style
        name="AppTheme"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@color/darkgray</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3598db</item>
        <item name="colorPrimaryDark">@color/cardview_dark_background</item>
        <item name="colorAccent">#3598db</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <style
        name="AppDialog"
        parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style
        name="AppTextAppearance.Button"
        parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
